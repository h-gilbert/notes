# Production environment variables for notes-app backend
# Copy this to .env and fill in the values

# Environment
ENVIRONMENT=production

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=notes

# JWT - IMPORTANT: Generate a strong, unique secret (at least 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-very-long-secure-jwt-secret-here
JWT_EXPIRY_HOURS=168

# CORS - REQUIRED in production! Set to your frontend domain(s)
ALLOWED_ORIGINS=https://your-frontend-domain.com
